{
    "manifest_version": 3,
    "name": "Reading Time",
    "version": "1.0",
    "description": "Add the reading time to chrome extension documenration articles",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "background":{
        "service_worker": "background.js"
    }

}